.user_wrapper
	.row.user_header
		.col-md-4.col-md-offset-4
			.user_avatar.text-center
				%img{:class => "img-circle", :src => "http://robohash.org/#{rand(36**2).to_s(36)}.png?size=150x150", :alt => 'User'}
			%h3.text-center
				= user.firstname

	.row.user_info
		.col-md-4.col-md-offset-4
			= user.full_name
			= user.email

	= render reviews





