.row#signup
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        %h2 Sign up
      
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .form-group
            = f.input :firstname, autofocus: true, class: "form-control"
            = f.input :lastname, class: "form-control"
            = f.input :email, class: "form-control"
            = f.input :password, class: "form-control"
            = f.input :password_confirmation, class: "form-control"
            %br
            %br
          .form-group
            = f.button :submit, "Sign up", class: 'btn btn-block'
        = render "devise/shared/links"
